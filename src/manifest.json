{
  "manifest_version": 2,
  "name": "Quick GPT Selected",
  "description": "Uses GPT to process selected text and display streaming results inline. Click \"More\" for a detailed popup response.",
  "version": "0.4",
  "applications": {
    "gecko": {
      "id": "quick-gpt-selected@rehn.fi",
      "strict_min_version": "58.0"
    }
  },
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": [
    "contextMenus",
    "storage",
    "tabs",
    "activeTab",
    "https://api.openai.com/*"
  ],
  "web_accessible_resources": [
    "resultPopup.html",
    "resultPopup.js"
  ],
  "options_ui": {
    "page": "options.html",
    "browser_style": true
  }
}
