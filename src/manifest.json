{
  "manifest_version": 2,
  "name": "Quick GPT Selected",
  "description": "Uses GPT to process selected text and display streaming results inline. Click \"More\" for a detailed popup response.",
  "version": "0.5",
  "browser_specific_settings": {
    "gecko": {
      "id": "quick-gpt-selected@rehn.fi",
      "strict_min_version": "140.0",
      "data_collection_permissions": {
        "required": ["none"]
      }
    },
    "gecko_android": {
      "strict_min_version": "142.0",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  },
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": [
    "contextMenus",
    "storage",
    "tabs",
    "activeTab",
    "https://api.openai.com/*"
  ],
  "web_accessible_resources": [
    "resultPopup.html",
    "resultPopup.js"
  ],
  "options_ui": {
    "page": "options.html",
    "browser_style": true
  }
}
